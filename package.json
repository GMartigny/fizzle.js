{
    "name": "fizzle.js",
    "version": "1.3.2",
    "description": "Write any text in a canvas with fizzly bubbles.",
    "main": "src/fizzle.js",
    "files": [
        "dist/"
    ],
    "unpkg": "dist/fizzle.min.js",
    "jsdelivr": "dist/fizzle.min.js",
    "scripts": {
        "lint": "eslint src/**/*.js",
        "test": "ava",
        "play": "webpack --mode=development --watch",
        "build": "webpack --mode=production",
        "prepublishOnly": "npm run lint && npm test && npm run build"
    },
    "eslintConfig": {
        "extends": "@gmartigny/eslint-config"
    },
    "ava": {
        "require": [
            "esm"
        ]
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/GMartigny/fizzle.js.git"
    },
    "keywords": [
        "canvas",
        "frontend",
        "rendering",
        "animation"
    ],
    "author": "GMartigny <guillaume.martigny@gmail.com>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/GMartigny/fizzle.js/issues"
    },
    "homepage": "https://github.com/GMartigny/fizzle.js#readme",
    "devDependencies": {
        "@gmartigny/eslint-config": "^1.2.3",
        "ava": "^2.2.0",
        "eslint": "^6.1.0",
        "esm": "^3.2.4",
        "webpack": "^4.36.1",
        "webpack-cli": "^3.2.3"
    },
    "dependencies": {
        "pencil.js": "^1.9.1"
    }
